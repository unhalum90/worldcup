SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SECRET_KEY=your_supabase_secret_key_here
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

MAILERLITE_API_KEY=your_mailerlite_api_key_here
MAILERLITE_WEBSITE_GROUP_ID=your_website_group_id_here
MAILERLITE_NEWSLETTER_GROUP_ID=your_newsletter_group_id_here
MAILERLITE_MEMBER_GROUP_ID=your_membership_group_id_here

# OpenAI Configuration (for AI content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration (for AI travel planner)
GEMINI_API_KEY=your_gemini_api_key_here

# Travel Planner Configuration
# Set to 'true' to use detailed city context files (slower but more accurate)
PLANNER_USE_CITY_CONTEXT=false
# Set to 'true' to use parallel processing (faster, experimental)
PLANNER_USE_PARALLEL=true
# Public site URL for internal API calls
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Lemon Squeezy (Purchases & Portal)
LEMON_API_KEY=your_lemon_api_key_here
LEMON_WEBHOOK_SECRET=your_lemon_webhook_secret_here
# Comma-separated Lemon product IDs that grant membership
LEMON_MEMBER_PRODUCT_IDS=12345,67890
# Alternate secret key name supported in docs
LEMONSQUEEZY_WEBHOOK_SECRET=
# Optional: fallback customer portal URL if API cannot generate per-customer links
LEMON_PORTAL_URL=https://your-store.lemonsqueezy.com/billing
# Server-side checkout links used by /api/checkout/* endpoints (preferred)
LS_MEMBER_BUY_URL=https://your-store.lemonsqueezy.com/buy/your-product-id
LS_BUNDLE4_BUY_URL=https://your-store.lemonsqueezy.com/buy/your-4city-bundle-id
# Public checkout links (fallbacks if server-side not set)
NEXT_PUBLIC_LS_MEMBER_BUY_URL=https://your-store.lemonsqueezy.com/buy/your-product-id
NEXT_PUBLIC_LS_BUNDLE4_BUY_URL=https://your-store.lemonsqueezy.com/buy/your-4city-bundle-id

# Admin allowlist for client-side checks (comma-separated)
NEXT_PUBLIC_ADMIN_EMAILS=

# Subscribe button behavior
# If true, clicking Subscribe opens membership checkout/page instead of newsletter modal
NEXT_PUBLIC_SUBSCRIBE_OPENS_MEMBERSHIP=false
# Destination when above is true (falls back to NEXT_PUBLIC_LS_MEMBER_BUY_URL or /memberships)
NEXT_PUBLIC_SUBSCRIBE_MEMBERSHIP_URL=

# Optional: Web Vitals collection endpoint
NEXT_PUBLIC_WEB_VITALS_ENDPOINT=

# Comma-separated list of URL prefixes that require membership
NEXT_PUBLIC_PAYWALLED_PREFIXES=/planner,/flight-planner,/lodging-planner

# Admin-only seed endpoint token (for /api/admin/seed-test)
ADMIN_SEED_TOKEN=replace-with-a-long-random-string

# Feature flags
# Set to 'true' to expose any Tournament navigation/items when available
NEXT_PUBLIC_ENABLE_TOURNAMENT=false
